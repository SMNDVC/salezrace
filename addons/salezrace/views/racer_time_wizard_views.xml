<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_salezrace_racer_time_wizard_form" model="ir.ui.view">
        <field name="name">salezrace.racer.time.wizard.form</field>
        <field name="model">salezrace.racer.time.wizard</field>
        <field name="arch" type="xml">
            <form string="Edit Times">
                <sheet>
                    <group>
                        <field name="racer_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="start_time"/>
                        <field name="finish_time"/>
                        <field name="final_time" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
