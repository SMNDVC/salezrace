<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- User Type radios -->
    <record id="module_category_salezrace" model="ir.module.category">
        <field name="name">SalezRace</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_salezrace_registration" model="res.groups">
        <field name="name">Registration</field>
        <field name="category_id" ref="salezrace.module_category_salezrace"/>
    </record>
    <record id="group_salezrace_start_finish" model="res.groups">
        <field name="name">Start/Finish</field>
        <field name="category_id" ref="salezrace.module_category_salezrace"/>
    </record>
    <record id="group_salezrace_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="salezrace.module_category_salezrace"/>
        <field name="implied_ids" eval="[
            (4, ref('salezrace.group_salezrace_registration')),
            (4, ref('salezrace.group_salezrace_start_finish')),
        ]"/>
</record>

</odoo>
